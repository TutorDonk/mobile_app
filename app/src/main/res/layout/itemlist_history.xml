<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/green_light"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_status"
            style="@style/TheJakartaSans.Regular.12sp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_rectangle"
            android:backgroundTint="@color/bg_popup_grey"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Status booking tutor" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/TheJakartaSans.Bold.22sp"
            android:layout_marginStart="24dp"
            android:background="@drawable/bg_rectangle"
            android:backgroundTint="@color/bg_popup_grey"
            android:padding="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_status"
            tools:text="Mata Pelajaran" />

        <TextView
            android:id="@+id/tv_subtitle"
            style="@style/TheJakartaSans.SemiBold.18sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_rectangle"
            android:backgroundTint="@color/bg_popup_grey"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@+id/tv_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            tools:text="Nama Tutor" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/TheJakartaSans.Regular.12sp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:background="@drawable/bg_rectangle"
            android:backgroundTint="@color/bg_popup_grey"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_subtitle"
            tools:text="Waktu pelaksanaan" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>